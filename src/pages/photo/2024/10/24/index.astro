---
import Layout from '@/layouts/Layout.astro'
import Photo from '@/components/Photo.astro'
import TilteArea from '@/components/photo/TilteArea.astro'
import Row from '@/components/Row.astro'
import { getPhotoById } from '@/data/photo'
import Photo1 from './_20241024_1.jpg'
import Photo2 from './_20241024_2.jpg'
import Photo3 from './_20241024_3.jpg'
import Photo4 from './_20241024_4.jpg'
import Photo6 from './_20241024_6.jpg'
import Photo7 from './_20241024_7.jpg'
import Photo8 from './_20241024_8.jpg'
import Photo9 from './_20241024_9.jpg'
import Photo10 from './_20241024_10.jpg'
import Photo11 from './_20241024_11.jpg'
import Photo12 from './_20241024_12.jpg'
import Photo13 from './_20241024_13.jpg'
import Photo14 from './_20241024_14.jpg'
import Photo15 from './_20241024_15.jpg'
import Photo16 from './_20241024_16.jpg'
import Photo17 from './_20241024_17.jpg'
import Photo18 from './_20241024_18.jpg'
import Photo19 from './_20241024_19.jpg'
import Photo20 from './_20241024_20.jpg'
import Photo21 from './_20241024_21.jpg'
import Photo22 from './_20241024_22.jpg'
