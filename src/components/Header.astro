---
import { Image } from 'astro:assets'
import TitleImage from '@/img/title.svg'
const isTop = Astro.url.pathname === '/'
---

{
  isTop ? (
    <h1>
      <Image src={TitleImage} alt="とある アルバム" height={40} />
    </h1>
  ) : (
    <h1>
      <a href="/">
        <Image src={TitleImage} alt="とある アルバム" height={40} />
      </a>
    </h1>
  )
}

<style lang="scss">
  h1 {
    margin: 0.5rem 0 1rem 0;
    font-size: 1rem;
  }
  a {
    border: none;
  }
</style>
