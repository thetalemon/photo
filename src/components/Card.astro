---
import { Image } from 'astro:assets'
import ImgNew from '@/img/new.svg'
import { getTagByValue } from '@/data/tags'
import { getUrlByPhoto } from '@/data/photo'

interface Props {
  title: string
  eyecatch: ImageMetadata
  year: number
  month: number
  day: number
  tagList: string[]
  isNew?: boolean
}

const { title, eyecatch, year, month, day, tagList, isNew } = Astro.props
const url = getUrlByPhoto(year, month, day)
---

<li class="card">
  <a class="cardMain" href={url}>
    <div class="imgWrapper">
      <Image class="eyecatch" src={eyecatch} alt={title} width={300} />
    </div>
    <p class="title">
      {title}
      {isNew && <Image src={ImgNew} alt="new" width={40} />}
    </p>
  </a>
  <ul class="tagList">
    {
      tagList.map((tag) => (
        <li class="tag">
          <a href={`/tag/${getTagByValue(tag)}`}># {tag}</a>
        </li>
      ))
    }
  </ul>
</li>

<style lang="scss">
  a {
    color: #3c3c3c;
  }

  .card {
    list-style: none;
    padding: 10px 8px;
    width: fit-content;
    background: white;
    border-radius: 6px;
    .cardMain {
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      .imgWrapper {
        border-radius: 6px;
        height: 200px;
        width: 280px;
        overflow: hidden;
        .eyecatch {
          transition: 0.5s all;
          overflow: hidden;
        }
      }
      .title {
        margin: 0.5rem 0 0;
        text-align: center;
        font-size: 1.3rem;
        font-weight: bold;
      }
      &:hover {
        .eyecatch {
          transform: scale(1.3, 1.3);
        }
      }
    }

    .tagList {
      margin-top: 1rem;
      display: flex;
      padding: 0;
      width: 100%;
      justify-content: flex-end;
      list-style: none;
      column-gap: 4px;
      .tag {
        list-style: none;
        background: #3c3c3c;
        a {
          color: white;
          border: none;
        }
        padding: 4px 12px;
        font-size: 0.9rem;
        border-radius: 6px;
      }
    }
  }
</style>
