---
import { Image } from 'astro:assets'

interface Props {
  img: ImageMetadata
  alt: string
  text?: string
}

const { img, alt, text } = Astro.props
---

<div class="card">
  <div class="imgWrapper">
    <Image class="eyecatch" src={img} alt={alt} width={450} />
  </div>
  <p class="text">
    {text}
  </p>
</div>

<style lang="scss">
  .card {
    list-style: none;
    padding: 10px 8px;
    width: fit-content;
    background: white;
    border-radius: 4px;
    img {
      width: 100%;
      height: auto;
    }
    .text {
      margin: 0.5rem 0;
      text-align: center;
      font-size: 1rem;
      font-weight: normal;
      line-height: 1rem;
      min-height: 2rem;
      display: flex;
      justify-content: center;
      align-items: center;
      color: #3c3c3c;
    }
  }
</style>
