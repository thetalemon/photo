---
import { Image } from 'astro:assets'

interface Props {
  img: ImageMetadata
  alt: string
  text?: string
}

const { img, alt, text } = Astro.props
---

<li class="card">
  <div class="imgWrapper">
    <Image class="eyecatch" src={img} alt={alt} width={300} />
  </div>
  <p class="text">
    {text}
  </p>
</li>

<style lang="scss">
  .card {
    list-style: none;
    padding: 10px 8px;
    width: fit-content;
    background: white;
    border-radius: 6px;
    .imgWrapper {
      border-radius: 6px;
      height: 200px;
      width: 280px;
      overflow: hidden;
    }
    .text {
      margin: 0.5rem 0 0;
      text-align: center;
      font-size: 1.3rem;
      font-weight: bold;
      min-height: 2.5rem;
    }
  }
</style>
