---
import { getDate } from '@/utils/dateHelper'
import type { Photo } from '@/data/photo'

interface Props {
  photo: Photo
}

const { photo } = Astro.props
---

<h2>
  <p class="title">
    {photo.title}
  </p>
  <p class="date">
    <span>
      撮影日: {getDate(photo.photographingDate)}
    </span>
    <span>
      公開日: {getDate(photo.publicationDate)}
    </span>
  </p>
</h2>

<style lang="scss">
  h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    font-weight: normal;
    margin: 4rem 0 3rem 0;
    padding: 0 0 0.5rem 0;
    border-bottom: 1px solid #ccc;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    column-gap: 24px;
  }
  .date {
    font-size: 0.9rem;
    color: #ccc;
    display: flex;
    column-gap: 16px;
    flex-direction: column;
  }
</style>
